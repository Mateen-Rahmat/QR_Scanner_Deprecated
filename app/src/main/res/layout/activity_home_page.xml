<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgg"
    tools:context=".HomePage"
    tools:layout_editor_absoluteY="25dp">

    <ImageButton
        android:id="@+id/imgbtnfrench"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="219dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/franch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/imgbtnspan"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="299dp"
        android:background="@drawable/spanish"
        android:elevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/imgbtnfrench"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="247dp"
        android:layout_height="0dp"
        android:layout_marginBottom="245dp"
        android:layout_marginStart="36dp"
        android:text="S'il vous plaît sélectionnez la langue:"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgbtnfrench"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="290dp"
        android:text="Por favor seleccione el idioma:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/imgbtnspan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>